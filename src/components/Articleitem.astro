---
const { title, date, img, link } = Astro.props;
---

<div class="fade-in">
    <a href={`/blog-articles/${link}`} class="article">
        <img src={`/images/article_images/${img}`} alt={title} loading="lazy" />
        <h2>{date}</h2>
        <h1>{title}</h1>
    </a>
</div>

<style>
    .article h1 {
        text-align: left;
        font-size: 16px;
        font-weight: 300;
    }
    .article h2 {
        text-align: left;
        font-size: 16px;
        color: gray;
        font-weight: 300;
    }
</style>
