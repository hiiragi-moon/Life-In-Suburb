---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div class="slim-content-part">
        <div class="about">
            <h1>ABOUT</h1>
        </div>

        <div class="about">
            <p>Company Profile</p>
        </div>

        <table class="about_list">
            <tbody>
                <tr>
                    <th>company</th>
                    <td>N.E.W.株式会社</td>
                </tr>
                <tr>
                    <th>director</th>
                    <td>新村 哲也</td>
                </tr>
                <tr>
                    <th>location</th>
                    <td>静岡県 島田市 井口 1421</td>
                </tr>
                <tr>
                    <th>tel</th>
                    <td>053-589-3210</td>
                </tr>
                <tr>
                    <th>fax</th>
                    <td>053-589-3211</td>
                </tr>
                <tr>
                    <th>mail</th>
                    <td>new@happy-8.com</td>
                </tr>
                <tr>
                    <th>license</th>
                    <td>静岡県知事（般-19）第34643号</td>
                </tr>
            </tbody>
        </table>

        <div class="about">
            <p>Office</p>
        </div>

        <div class="office">
            <div class="office_item">
                <h1>Life In Suburb</h1>
                <p>〒427-0104 静岡県島田市井口1421</p>
                <p>open：9:00～17:00</p>
                <p>close：sunday（第1日曜日は営業）</p>
                <div class="office_item_map">
                    <a
                        href="https://maps.app.goo.gl/d1T6yti99d1qib9q8?g_st=com.google.maps.preview.copy"
                    >
                        google map
                    </a>
                </div>
            </div>
            <div class="office_item">
                <img src="/images/map.webp" alt="" />
            </div>
        </div>
    </div>

    <hr />
</BaseLayout>

<style>
    /* ABOUT */
    .about h1 {
        margin-bottom: 5%;
        font-size: 40px;
    }

    .about p {
        text-align: left;
        font-size: 30px;
        font-weight: bold;
        margin-bottom: 3%;
    }

    .about_list {
        padding-bottom: 5%;
    }

    .about_list tr {
        text-align: left;
    }

    .about_list th,
    td {
        padding-bottom: 10%;
    }

    .about_list td {
        width: 50%;
    }

    .office {
        display: grid;
        grid-template-columns: 30% 70%;
        gap: 20px;
        margin-top: 3%;
    }

    .office_item {
        text-align: center;
    }

    .office_item h1 {
        font-size: 24px;
        text-align: left;
        padding-bottom: 10%;
    }

    .office_item p {
        text-align: left;
        font-size: 16px;
        margin-bottom: 3%;
    }

    .office_item_map {
        padding-top: 10%;
    }

    .office_item_map a {
        padding: 5%;
        padding-left: 30%;
        padding-right: 30%;
        white-space: nowrap;
        text-decoration: none;
        border: 1px solid #000000;
        transition: 0.5s ease;
    }

    .office_item_map a:hover {
        color: #ffffff;
        background-color: #000000;
        opacity: 1;
    }
</style>

<script src="/js/fadein.js" defer></script>
