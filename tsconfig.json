{
    "compilerOptions": {
        "target": "ESNext", // 最新のESNext機能を使用
        "module": "ESNext", // ESNextモジュールを使用
        "moduleResolution": "node", // Node.jsのモジュール解決
        "jsx": "preserve", // JSXをそのまま保持
        "jsxImportSource": "react", // JSXインポートのソースを指定（必要に応じて変更）
        "strict": true, // 厳格な型チェックを有効化
        "baseUrl": ".", // プロジェクトのルートを基準に設定
        "paths": {
            "@/*": [
                "src/*"
            ] // `@`エイリアスでsrcフォルダを指定
        },
        "allowJs": true, // JavaScriptファイルもサポート
        "esModuleInterop": true, // ESモジュールとCommonJSモジュールの互換性をサポート
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.astro"
    ], // 含めるファイル
    "exclude": [
        "node_modules"
    ] // 除外するファイル
}